generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  userId    String   @unique // Google ID or Apple ID - must be unique
  trialUsed Boolean  @default(false)
  createdAt DateTime @default(now()) // Automatically uses timestamptz in PostgreSQL
  updatedAt DateTime @updatedAt

  // Relations
  speeches Speech[]

  @@index([userId]) // Index for fast lookups by userId
}

model Speech {
  id        String   @id @default(uuid())
  userId    String
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user   User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  blocks SpeechBlock[]

  @@index([userId]) // Index for fast queries: "get all speeches for user"
}

model SpeechBlock {
  id        String   @id @default(uuid())
  speechId  String
  order     Int // Order of the block in speech (1, 2, 3, ...)
  title     String
  text      String   @db.Text
  audioUrl  String?
  duration  Int? // Duration in seconds
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  speech Speech @relation(fields: [speechId], references: [id], onDelete: Cascade)

  @@unique([speechId, order]) // Ensure unique order per speech
  @@index([speechId]) // Index for fast queries: "get all blocks for speech"
  @@index([speechId, order]) // Composite index for ordered queries
}
